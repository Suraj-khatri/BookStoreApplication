@model IEnumerable<BookModel>

<div class="container">
    <h2 class="display-4">All Books</h2>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRvE6mJUhar7--92RjxnlphZOZJVVZ53JacOO7_7YCp&s" class="card-img-top" width="225" height="225">
                    <div class="card-body">
                        <h3 class="card-title">@book.Title</h3>
                        <p class="card-text"></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/book/getbook/@book.Id" class="btn btn-outline-secondary btn-sm">View Details</a>
                            </div>
                            <small class="text-muted">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>

        }

    </div>
</div>