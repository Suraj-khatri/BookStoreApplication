@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager

@if(_signInManager.IsSignedIn(User))
{
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Hello @User.Identity.Name
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item"  asp-action="logout" asp-controller="account">Logout</a></li>
            
        </ul>
    </div>
}
else
{
    <li class="nav-item">
        <a class="btn btn-outline-primary" asp-action="login" asp-controller="account">Login</a>
        <a class="btn btn-primary" asp-action="signup" asp-controller="account">Register</a>
    </li>
}

